<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/itemDetail_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />

        <TextView
            android:id="@+id/itemDetail_tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/itemDetail_image"
            android:textSize="24dp" />

        <Button
            android:id="@+id/itemBtLihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemDetail_tvNama"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/itemDetail_image"
            android:text="Lihat" />

        <Button
            android:id="@+id/itemBtShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemDetail_tvNama"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/itemBtLihat"
            android:text="Share" />

    </RelativeLayout>
</LinearLayout>